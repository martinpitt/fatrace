#!/bin/sh
set -eu

MYDIR=$(dirname $(readlink -f "$0"))
export PATH=$(pwd):$MYDIR:$PATH

for t in \
    fatrace \
    fatrace-currentmount \
    fatrace-currentmount-json \
    fatrace-btrfs \
    fatrace-user \
    fatrace-user-json \
    fatrace-comm \
    fatrace-comm-json \
    fatrace-json \
; do
    export AUTOPKGTEST_TMP=$(mktemp -d)
    echo "===== $t ===="
    "$MYDIR"/$t
    rm -r "$AUTOPKGTEST_TMP"
done
